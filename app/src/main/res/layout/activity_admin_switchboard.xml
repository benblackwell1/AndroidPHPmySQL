<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminSwitchboardActivity">

    <LinearLayout
        android:id="@+id/linearLayoutAppointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="16dp">

    <Button
        android:id="@+id/buttonAppointments"
        android:text="Appointments"
        android:drawableLeft="@drawable/ic_appointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/buttonPatients"
        android:text="Patients"
        android:drawableLeft="@drawable/ic_patients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/buttonScreenings"
        android:text="Screenings"
        android:drawableLeft="@drawable/ic_screenings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </LinearLayout>
</RelativeLayout>