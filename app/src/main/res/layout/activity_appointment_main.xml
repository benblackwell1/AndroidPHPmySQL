<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbg"
    tools:context=".AppointmentMainActivity">
    <LinearLayout
        android:id="@+id/linearLayoutAppointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/buttonAddAppointment"
                android:text="Add Appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/buttonAppointmentHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appointment History" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upcoming Appointments:"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="22sp"/>

        <ListView
            android:id="@+id/listViewAppointments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below = "@id/linearLayout" />
    </LinearLayout>


</RelativeLayout>