<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateMedical">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Patient ID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
        <TextView
            android:id="@+id/textViewPatientID"
            android:hint="Patient ID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"/>
    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"/>
            <TextView
                android:id="@+id/textViewGender"
                android:hint="Gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Date of Birth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"/>
            <TextView
                android:id="@+id/textViewDOB"
                android:hint="DOB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"/>
            <EditText
                android:inputType="number"
                android:id="@+id/editWeightUpdate"
                android:hint="Kg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Alcohol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"/>
            <EditText
                android:inputType="number"
                android:id="@+id/editAlcoholUpdate"
                android:hint="Units per week"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Smoking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"/>
            <EditText
                android:inputType="number"
                android:id="@+id/editSmokingUpdate"
                android:hint="Cigarettes per week"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Underlying Conditions "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"/>
            <EditText
                android:id="@+id/editUnderlyingConditionsUpdate"
                android:inputType="textMultiLine"
                android:lines="4"
                android:hint="Underlying Conditions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:gravity="top|left"
                android:scrollHorizontally="false"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Allergies"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"/>
            <EditText
                android:id="@+id/editAllergiesUpdate"
                android:inputType="textMultiLine"
                android:lines="4"
                android:hint="Allergies"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:gravity="top|left"
                android:scrollHorizontally="false"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Medication"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"/>
            <EditText
                android:id="@+id/editMedicationUpdate"
                android:inputType="textMultiLine"
                android:lines="4"
                android:hint="Medication"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:gravity="top|left"
                android:scrollHorizontally="false"/>
        </LinearLayout>

        <Button
            android:text="Update"
            android:id="@+id/buttonUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>